<script>
function toggleMajors(button) {
  const majors = button.nextElementSibling;
  if (majors.style.display === "block") {
    majors.style.display = "none";
    button.textContent = "عرض التخصصات";
  } else {
    majors.style.display = "block";
    button.textContent = "إخفاء التخصصات";
  }
}
</script>
